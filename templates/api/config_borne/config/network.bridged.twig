config 'interface' 'loopback'
	option 'ifname' 'lo'
	option 'proto' 'static'
	option 'ipaddr' '127.0.0.1'
	option 'netmask' '255.0.0.0'

config 'interface' 'lan'
	option 'ifname' '__LAN-IF__'
    option 'ifname' '__WAN-IF__'
	option 'type' 'bridge'
	option 'proto' 'dhcp'

config 'switch'
	option 'name' '__LAN-IF__'
	option 'reset' '1'

config 'switch_vlan'
	option 'device' '__LAN-IF__'
	option 'vlan' '1'
	option 'ports' '0 1 2 3 4 5'
	option 'vid' '1'
