client
dev tap1

proto udp

remote {{ ip_server }} 3000


resolv-retry infinite
nobind
persist-key
persist-tun

# Le serveur controle le delai de nego
reneg-sec 0

ca /etc/openvpn/ca.crt
cert /etc/openvpn/{{ hostname }}.crt
key /etc/openvpn/{{ hostname }}.key

comp-lzo
verb 1
script-security 2
up /etc/openvpn/vpn-wifi-up.sh
